@model IEnumerable<Cat.Models.Characters.KittyListIndexViewModel>

@{ int rowNumber = 1; }
<div><a asp-action="Add" asp-controller="Characters" type="submit" class="btn btn-primary">Get a new character</a></div>
<div><a asp-action="Create" asp-controller="Characters" class="btn btn-primary">Create a new character</a></div>
@*User can go on a mission using ADD function, to obtain a new character. In controller, this is called "PlayerSoloMission"*@

<div class="h1">Your Characters:</div>
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Class</th>
				<th scope="col">Status</th>
				<th scope="col">Level</th>
				<th scope="col">Rank</th>
				<th scope="col">Admin actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var character in Model)
			{
				<tr>
					@*Once images have been implemented add the image here too*@
					<td>@rowNumber</td>
					<td>@character.CharacterName</td>
					<td>@character.CharacterClass</td>
					<td>@character.CharacterStatus</td>
					<td>@character.CharacterLevel</td>
					<td>@character.CharacterRank</td>
					<td>
						<a asp-action="details" asp-controller="characters" asp-route-id="@character.ID" class="btn btn-info">CharacterDetails</a>
						<br />
						<a asp-action="update" asp-controller="characters" asp-route-id="@character.ID" class="btn btn-info">CharacterConfigure</a>		
						<br />
						<a asp-action="delete" asp-controller="characters" asp-route-id="@character.ID" class="btn btn-info">CharacterDelete</a>
					</td>
				</tr>
				rowNumber++;
			}
		</tbody>
	</table>
</form>
